	</ItemGroup>

	<ItemGroup>
		<Folder Include="Api\Controllers\" />
		<Folder Include="Api\Extensions\" />
		<Folder Include="Application\Interfaces\" />
		<Folder Include="Domain\Events\" />
		<Folder Include="Domain\Exceptions\" />
		<Folder Include="Infrastructure\Logging\" />
		<Folder Include="Shared\Helpers\" />
		<Folder Include="Shared\Extensions\" />
	</ItemGroup>

	<ItemGroup>
		<None Update="slaves.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
